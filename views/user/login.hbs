<style>
        /* Custom CSS for the form */
        .login-container {
            background-color: #f8f9fa;
            padding: 30px;
            border-radius: 10px;
        }

        .login-header {
            text-align: center;
            margin-bottom: 20px;
        }

        .error {
            color: #ff0000;
        }

        /* Add more custom CSS here as needed */
    </style>
    <title>Login</title>
</head>
<body>
    <div class="container mt-5">
        <div class="row">
            <div class="col-md-6 m-auto">
                <div class="login-container">
                    <h2 class="login-header">Login</h2>
                    <form action="/login" method="post">
                        {{#if loginErr}}
                        <p class="error">{{loginErr}}</p>
                        {{/if}}
                        <div class="mb-3">
                            <label for="email" class="form-label">Email address</label>
                            <input type="email" class="form-control" id="email" name="Email" placeholder="Enter email">
                        </div>
                        <div class="mb-3">
                            <label for="password" class="form-label">Password</label>
                            <input type="password" class="form-control" id="password" name="Password" placeholder="Password">
                        </div>
                        <div class="mb-3">
                            <a href="/signup" style="text-decoration: none;">Create a new account?</a>
                        </div>
                        <button type="submit" class="btn btn-primary float-right">Login</button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- Add Bootstrap JS and jQuery scripts here -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js" integrity="sha384-KyZXEAg3QhqLMpG8r+8fhAXLRu3cg5aROfCvJfoUo3Fqs5pyszc+j3ESwF3T3lH6x" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.min.js" integrity="sha384-KyZXEAg3QhqLMpG8r+8fhAXLRu3cg5aROfCvJfoUo3Fqs5pyszc+j3ESwF3T3lH6x" crossorigin="anonymous"></script>
</body>